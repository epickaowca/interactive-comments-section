generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  password  String   @unique @default(uuid())
  username  String   @unique
  color     Color
  avatar    Avatar
  createdAt DateTime @default(now())
}

enum Color {
  orange
  teal
  violet
  seagreen
  burlywood
  tomato
}

enum Avatar {
  avatar1
  avatar2
  avatar3
  avatar4
  avatar5
  avatar6
}
